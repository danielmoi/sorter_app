<%= form_for @bookmark, :html => {:class => 'form'} do |f| %>

<% if @bookmark.errors.any? %>
<ol>
  <% @bookmark.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ol>
<% end %>

<fieldset>
  <%= f.label :url, "URL: ", :class => 'label' %>
  <%= f.url_field :url, :required => true, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :title, "Title: ", :class => 'label' %>
  <%= f.text_field :title, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :description, "Description: ", :class => 'label' %>
  <%= f.text_field :description, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :is_favourite, "Favourite?", :class => 'label' %>
  <%= f.check_box :is_favourite, :class => 'checkbox' %>
</fieldset>

<fieldset>
  <%= f.label :is_unread, "Unread?", :class => 'label' %>
  <%= f.check_box :is_unread, :class => 'checkbox' %>
</fieldset>

<fieldset>
  <p>Category</p>

  <%= f.collection_check_boxes :category_ids, @current_user.categories, :id, :name do |b| %>
    <%= b.check_box %>
    <%= b.label %>
  <% end %>

</fieldset>

<fieldset class="btn-container">
  <%= f.submit :class => 'btn' %>
</fieldset>

<% end %>
