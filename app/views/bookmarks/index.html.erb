<div class="main__heading">
  <h2>My bookmarks</h2>
</div>

<div class="main__subheading">
</div>

<div class="btn-container">
  <%= link_to 'New bookmark', new_bookmark_path, :class => 'btn' %>
</div>

<% @user.categories.each do |category| %>

  <h3><%= category.name %></h3>

    <ul>
      <% category.bookmarks.each do |bookmark| %>
        <%= render :partial => 'magic', locals: { :bookmark => bookmark } %>
      <% end %>
  </ul>
<% end %>
