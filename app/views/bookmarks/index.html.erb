<div class="main__heading">
  <h2>My Bookmarks</h2>
</div>

<div class="main__subheading">
  <p>Find me in app/views/bookmarks/index.html.erb</p>
</div>

<div class="btn-container">
  <%= link_to 'New bookmark', new_bookmark_path, :class => 'btn' %>
</div>

<div class="bookmarks-container">

  <% @user.bookmarks.each do |b| %>

  <div class="bookmark-each">
    <ul>
      <li><%= b.title %></li>
      <li><%= link_to b.url, b.url, :class => 'bookmark-link' %></li>
      <li><%= b.description %></li>
      <li class="bookmark-created"><%= b.created_at %></li>
      <li class="bookmark-fav">Favourite? <%= b.is_favourite %></li>
      <li class="bookmark-unread">Unread? <%= b.is_unread %></li>
      <li><%= link_to "Edit", edit_bookmark_path(b.id) %></li>
      <li><%= link_to "Delete", bookmark_path(b.id), :method => 'delete' %></li>

    </ul>
  </div>
  <% end %>
</div>
