<%= form_for user, :html => {:class => 'form'} do |f| %>

<% if user.errors.any? %>
  <ol>
    <% user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<fieldset>
  <%= f.label :name, :class => 'label' %>
  <%= f.text_field :name, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :email, :class => 'label' %>
  <%= f.email_field :email, :required => true, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :password, :class => 'label' %>
  <%= f.password_field :password, :required => true, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :password_confirmation, "Confirm", :class => 'label' %>
  <%= f.password_field :password_confirmation, :required => true, :class => 'input' %>
</fieldset>

<fieldset>
  <%= f.label :image_url, "Profile Image", :class => 'label' %>
  <%= f.file_field :image_url, :class => 'input' %>
</fieldset>

<fieldset class="text-center">
  <% if @current_user == nil %>
    <%= f.submit "Sign up", :class => 'btn' %>

    <p class="text-center">
      If you're already a sorter, you can <%= link_to "Log in", login_path, :class => 'link-underline' %>
    </p>

  <% else %>
    <%= f.submit "Save changes", :class => 'btn' %>
  <% end %>

</fieldset>




<% end %>
