<!DOCTYPE html>
<html>
  <head>
    <title>SorterApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  </head>
  <body>
    <header class="header">
      <div class="header-container">
        <div class="header__user">

          <ul class="nav-list nav-list--user-options">
            <!--  Conditional links -->
            <% if @current_user.present? %>
            <li class="nav-list__item nav-list__item--header-users">Logged in as:
              <%= link_to @current_user.email, user_path(@current_user.id) %></li>
            <li class="nav-list__item nav-list__item--header-users"><%= link_to 'Edit profile', users_edit_path %></li>
            <li class="nav-list__item nav-list__item--header-users"><%= link_to 'Log out', login_path, :method => :delete %></li>

          <% else %>
            <li class="nav-list__item nav-list__item--header-users"><%= link_to 'Sign up', signup_path %></li>
            <li class="nav-list__item nav-list__item--header-users"><%= link_to 'Log in', login_path %></li>
            <% end %>
            <!--  End conditional links -->
          </ul>

        </div>

        <h1>Sorter App 0.1</h1>

        <nav class="nav">
          <ul class="nav-list">
            <li class="nav-list__item"><%= link_to "Home", root_path %></li>
            <li class="nav-list__item"><%= link_to "About", about_path %></li>
            <li class="nav-list__item"><%= link_to "Help", help_path %></li>

          </ul>
        </nav>
      </div>

    </header>

    <main class="main">

      <%= yield %>

    </main>

  </body>
</html>
