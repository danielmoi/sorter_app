<li>
  <div class="bookmark-each">
<div class="bookmark__details">
  <h4><%= link_to bookmark.title, bookmark_path(bookmark.id) %></h4>
  <p class="truncate"><%= link_to bookmark.url, bookmark.url, :class => 'bookmark-link' %></p>
  <p class="truncate"><%= bookmark.description %></p>
  <p class="bookmark-created">

    <% if bookmark.is_favourite == true %>
      <i class="bookmark-fav bookmark-fav--is-fav fa fa-heart"></i>
    <% else %>
      <i class="bookmark-fav bookmark-fav--is-notfav fa fa-heart-o"></i>
    <% end %>

    <% if bookmark.is_read == true %>
      <i class="bookmark-read bookmark-read--is-read fa fa-check-square-o"></i>
    <% else %>
      <i class="bookmark-read bookmark-read--is-unread fa fa-square-o"></i>
    <% end %>



    <% y = distance_of_time_in_words_to_now(bookmark.created_at) %>

    <i class="bookmark-timestamp"><%= y %> ago</i>



  <!--  TODO: Is this a safe way to hide data? -->
  <% if @user == @current_user %>
    <%= link_to "", bookmark_path(bookmark.id), :method => 'delete', :class => 'bookmark-trash bookmark--spacer-left fa fa-trash' %>
  <% end %>


  </p>
</div>

<!--  TODO: Is this a safe way to hide data? -->
<% if @user == @current_user %>
<div class="bookmark__controls">
  <%= link_to "", edit_bookmark_path(bookmark.id), :class => 'bookmark__button bookmark-edit fa fa-pencil' %>
<% end %>

</div>

</div>

  </li>
