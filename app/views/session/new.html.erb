<div class="main__heading">
  <h2>Login</h2>
</div>
<div class="main__subheading">
  <p>Find me in app/views/session/new.html.erb</p>
</div>

<!--  Display error from login fail (redirect from login `else`)-->
<% if flash[:error].present? %>
<h3 class="login__error-heading">
  <%= flash[:error] %>
</h3>
<% end %>

<%= form_tag login_path, :class => 'form' do %>

<fieldset>
  <%= label_tag :email, nil, :class => 'label' %>
  <%= text_field_tag :email, nil, :class => 'input' %>
</fieldset>

<fieldset>
  <%= label_tag :password, nil, :class => 'label' %>
  <%= password_field_tag :password, nil, :class => 'input' %>
</fieldset>

<fieldset class="text-center">
  <%= submit_tag 'Login', :class => 'btn' %>
</fieldset>

<% end %>
